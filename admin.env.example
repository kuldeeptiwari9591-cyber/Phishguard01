# ─────────────────────────────────────────────────────
#  PhishGuard Admin Panel - Environment Variables
#  Copy this to apikey.env and fill in your values
# ─────────────────────────────────────────────────────

# ── Flask Security ────────────────────────────────────
# IMPORTANT: Change this to a strong random string in production
# Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=CHANGE_ME_TO_A_STRONG_RANDOM_STRING

# ── Admin Credentials ────────────────────────────────
# Username for the admin panel login
ADMIN_USERNAME=admin

# Password hash for the admin panel (SHA-256 of password + salt)
# Default password is: admin123  (CHANGE THIS IN PRODUCTION)
#
# To generate a new hash, run:
#   python -c "
#   import hashlib, os
#   salt = 'phishguard_salt_2024'
#   pw   = 'YOUR_NEW_PASSWORD_HERE'
#   print(hashlib.sha256(f'{pw}{salt}'.encode()).hexdigest())
#   "
ADMIN_PASSWORD_HASH=2e2f4f62d8c82b11a84379cebfcf16d0b9e32c7c7e4ad8c9bde7bdb028c65b16

# (Optional) Override the default salt used in hashing
# ADMIN_SALT=phishguard_salt_2024

# ── Database ──────────────────────────────────────────
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# ── External API Keys ─────────────────────────────────
GOOGLE_SAFE_BROWSING_API_KEY=
VIRUSTOTAL_API_KEY=
WHOISXML_API_KEY=
SCREENSHOT_API_KEY=

# ── App Settings ──────────────────────────────────────
PORT=5000
FLASK_ENV=development
